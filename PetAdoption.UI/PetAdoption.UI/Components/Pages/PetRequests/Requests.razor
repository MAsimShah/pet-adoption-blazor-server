@* @page "/requests" *@

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">
                <i class="bi bi-heart-fill text-danger"></i>
                Pets available for adoption
            </h1>
        </div>
    </div>

    <!-- Pet list for request -->
    <div class="row g-4" id="petCards">
        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
            <div class="card bb-card h-100" data-pet-id="${pet.id}">
                <div class="position-relative">
                    <img src="C:\Users\shaha\OneDrive\Pictures\2.png" class="card-img-top pet-image" alt="${pet.name}">
                    <span class="pet-status'}">
                        ${pet.status}
                    </span>
                    <button class="favorite-btn ${favorites.has(pet.id) ? 'active' : ''}"
                            onclick="toggleFavorite(${pet.id})" data-pet-id="${pet.id}">
                        <i class="bi ${favorites.has(pet.id) ? 'bi-heart-fill' : 'bi-heart'}"></i>
                    </button>
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">${pet.name}</h5>
                    <p class="card-text text-muted mb-2">
                        <i class="bi bi-geo-alt"></i> ${pet.location}
                    </p>
                    <p class="card-text">
                        <small class="text-muted">${pet.breed} • ${pet.age}</small>
                    </p>
                    <p class="card-text flex-grow-1">${pet.description.substring(0, 80)}...</p>
                    <button class="btn btn-primary mt-auto" onclick="showPetDetails(${pet.id})">
                        View Details
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>